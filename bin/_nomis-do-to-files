# Run this by passing it to bash as a command line arg.
# This shebang doesn't work on Android: #!/bin/bash

# Do things to all git directories below current directory.
# Skips directories that contain a file called .ignore

if [ "$#" -lt 2 ]; then
    echo "Usage: _nomis-do-to-files pattern command-prefix"
fi

pattern="$1"
shift
command_prefix="$*"

# echo pattern = "${pattern}"
# echo command_prefix = "${command_prefix}"

find . -name "${pattern}" -exec ${command_prefix} {} +
